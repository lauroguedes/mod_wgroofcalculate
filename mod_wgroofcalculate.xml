<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
    <name>mod_wgroofcalculate</name>
    <author>Lauro Guedes</author>
    <creationDate>2016-02-03</creationDate>
    <copyright>Copyright (C) 2016 - Leowgweb</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>leowgweb@gmail.com</authorEmail>
    <authorUrl>http://leowgweb.com</authorUrl>
    <version>1.0</version>
    <description>MOD_EXAMPLE_INSTALL_DESC</description>
    
    <files>
        <filename module="mod_wgroofcalculate">mod_wgroofcalculate.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <filename>index.html</filename>
        <filename>mod_wgroofcalculate.xml</filename>
        <filename>helper.php</filename>
    </files>
    
    
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_FOOTER" />
    
    
    <config>
        
        <fields name="params">
            
            <fieldset name="basic">

                <field
                    name="typesofroof"
                    type="textarea"
                    default=""
                    label="Tipos de Telha"
                    description="Entre com cada telha em um linha colocando o nome, o peso e o rendimento: Ex: Portuguesa|2.50|16"
                    rows="10"
                    cols="5"
                />

                <field
                    name="increase"
                    type="text"
                    default="10"
                    label="Acréscimo(%)"
                    description="Insira o valor em porcentagem a acrescentar de perdas e recortes."
                    size="10"
                />
                
            </fieldset>

            <fieldset name="layout">
                <field
                        name="formsize"
                        type="text"
                        default="100"
                        label="Tamanho do Formulário(%)"
                        description="Insira o valor em porcentagem do tamanho do campo."
                />
                <field name="formalign" type="list" default="left" label="Alinhamento do Formulário" description="Selecione o alinhamento do formulário">
                    <option value="left">Esquerda</option>
                    <option value="center">Centro</option>
                    <option value="right">Direita</option>
                </field>
                <field name="fieldalign" type="list" default="left" label="Alinhamento dos Campos" description="Selecione o alinhamento dos campos">
                    <option value="left">Esquerda</option>
                    <option value="center">Centro</option>
                    <option value="right">Direita</option>
                    <option value="between">Centro Espaçado</option>
                    <option value="around">Centro Compactado</option>
                </field>
                <field name="fieldposition" type="list" default="vertical" label="Posição dos Campos" description="Selecione o posicionamento dos campos">
                    <option value="vertical">Vertical</option>
                    <option value="horizontal">Horizontal</option>
                </field>
            </fieldset>

            <fieldset name="advanced">

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                />

            </fieldset>
            
        </fields>
        
    </config>
    
    
    <updateservers>
        <!--<server type="collection">http://example.com/list.xml</server>-->
        <server type="extension" priority="1" name="Asikart Example Module">http://update.asikart.com/module/mod_example.xml</server>
    </updateservers>
    
    
</extension>
